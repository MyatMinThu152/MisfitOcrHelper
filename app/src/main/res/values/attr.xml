<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SegmentedProgressBar">
        <attr name="dividerColor" format="color" />
        <attr name="progressBarBackgroundColor" format="color" />
        <attr name="progressBarColor" format="color" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="isDividerEnabled" format="boolean" />
        <attr name="divisions" format="integer" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ScrollDatePicker">
        <attr name="baseColor" format="color"/>
        <attr name="selectDayColor" format="color"/>
        <attr name="baseTextColor" format="color"/>
        <attr name="selectedColor" format="color"/>
        <attr name="selectedTextColor" format="color"/>
        <attr name="showTitle" format="boolean"/>
        <attr name="showFullDate" format="boolean" />
    </declare-styleable>

</resources>